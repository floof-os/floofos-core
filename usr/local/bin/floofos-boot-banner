#!/bin/bash
# FloofOS Boot Banner - Display welcome message during boot

clear

cat << 'EOF'

   ______          ___ ____  ____
  / __/ /__  ___  / _// __ \/ __/
 / _// / _ \/ _ \/ _// /_/ /\ \  
/_/ /_/\___/\___/_/  \____/___/  

EOF

echo "[ Fast Line-rate Offload On Fabric OS ]"
echo ""

VERSION=$(cat /etc/floofos-release 2>/dev/null || echo "1.0")
BUILD_DATE=$(date -r /etc/os-release +%Y.%m.%d 2>/dev/null || date +%Y.%m.%d)

echo "Version: $VERSION"
echo "Build:   $BUILD_DATE"
echo ""
echo "Initializing system services..."
echo ""

sleep 1

