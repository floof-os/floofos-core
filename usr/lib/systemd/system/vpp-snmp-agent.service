[Unit]
Description=VPP SNMP Agent
After=snmpd.service vpp.service
Requires=snmpd.service vpp.service

[Service]
Type=simple
ExecStart=/usr/bin/vpp-snmp-agent -config /etc/vpp-snmp-agent/config.yaml
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target
